# ==================================
# GenuineGrads Frontend Configuration
# ==================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local with real credentials!

# ---- Backend API ----
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:4000/graphql

# ---- Solana Configuration ----
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://devnet.helius-rpc.com/?api-key=your_helius_api_key
SOLANA_PROGRAM_ID=your_program_id
NEXT_PUBLIC_SUPER_ADMIN_PUBKEY=your_super_admin_wallet_public_key

# ---- Helius API (for RPC and transaction confirmation) ----
NEXT_PUBLIC_HELIUS_API_KEY=your_helius_api_key

# ---- Pinata (IPFS) Configuration ----
# Note: API keys exposed to browser - use restricted keys
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key
NEXT_PUBLIC_PINATA_SECRET_KEY=your_pinata_secret_key
